# Laravel API Configuration
# For local development (mobile/emulator)
EXPO_PUBLIC_API_BASE_URL=https://docavailable-3vbdv.ondigitalocean.app
EXPO_PUBLIC_LARAVEL_API_URL=https://docavailable-3vbdv.ondigitalocean.app

# For web deployment (use your actual domain)
# EXPO_PUBLIC_API_BASE_URL=https://your-backend-domain.com
# EXPO_PUBLIC_LARAVEL_API_URL=https://your-backend-domain.com

# For localhost web development
# EXPO_PUBLIC_API_BASE_URL=http://localhost:8000
# EXPO_PUBLIC_LARAVEL_API_URL=http://localhost:8000

# JWT Configuration (handled by Laravel backend)
# JWT_SECRET is set in Laravel backend

# App Configuration
EXPO_PUBLIC_APP_NAME=DocAvailable
EXPO_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (for gradual migration)
EXPO_PUBLIC_USE_BACKEND_CHAT=true
EXPO_PUBLIC_USE_BACKEND_WALLET=true
EXPO_PUBLIC_USE_BACKEND_NOTIFICATIONS=true
EXPO_PUBLIC_USE_BACKEND_APPOINTMENTS=true
EXPO_PUBLIC_BACKEND_ENABLED=true

# WebSocket Configuration (for real-time chat)
# Removed Pusher configuration - will use alternative solution

